{
  "env": {
    "commonjs": true,
    "es2020": true,
    "node": true
  },
  "extends": ["standard", "prettier"],
  "plugins": ["prettier"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly",
    "use": true
  },
  "parserOptions": {
    "ecmaVersion": 11
  },
  "rules": {
    "prettier/prettier": "error",
    "no-unused-vars": "warn"
  }
}
